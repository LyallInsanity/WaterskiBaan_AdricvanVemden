            <Label Content="Wachtrij starten" x:Name="LabelWachtrijStarten" Canvas.Top="136" Width="250" Canvas.Left="-1"/>
            <Label Content="Totaal bezoekers:" x:Name="LabelInfoSp" Canvas.Left="10" Canvas.Top="277" Width="554" Height="32"/>
