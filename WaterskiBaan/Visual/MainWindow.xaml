        </Canvas>
        <Label Content="Lijnen voorraad" x:Name="LabelVoorraad" HorizontalAlignment="Left" Margin="10,234,0,0" VerticalAlignment="Top" Height="28" Width="561" Grid.ColumnSpan="2"/>
